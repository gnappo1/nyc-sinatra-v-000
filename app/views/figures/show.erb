<h1>Figure Name: <%= @figure.name %></h1><br>
<h3>Figure Titles: </h3><br>
<ul>
  <% @figure.titles.each do |title| %>
  <li>
    <a href="/titles/<%=title.id%>"><%= title.name %></a><br>
  </li>
  <% end %>
</ul>

 <h3>Figure Landmarks:</h3>
 <ul>
   <% @figure.landmarks.each do |landmark| %>
   <li>
     <a href="/landmarks/<%=landmark.id%>"><%= landmark.name %></a><br>
   </li>
   <% end %>
 </ul>
