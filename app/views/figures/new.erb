<h1>Create a New Figure</h1>
<form action="/figures" method="POST">

   <label> Figure Name:</label>
   <input type="text" id="figure_name" name="figure[name]"></br>

   <label> Figure Titles:</label>
   <% Title.all.each do |title| %>
     <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"><%=title.name%></input>
   <% end %>
   </br></br>
   <input type="text" name="title[name]" id="new_title" placeholder="New Title Name"></br></br>


   <label> Figure Landmarks:</label>
   <% Landmark.all.each do |landmark| %>
     <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"><%=landmark.name%></input>
   <% end %>
   </br></br>

   <p> Or create a new one:</p>

   <label> Figure Landmark:</label>
   <input type="text" name="landmark[name]" id="new_landmark" placeholder="New Landmark Name"></br></br>

   <input type="submit" value="Create New Figure">
 </form>
